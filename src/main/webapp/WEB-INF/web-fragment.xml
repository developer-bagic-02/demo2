<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                                  http://xmlns.jcp.org/xml/ns/javaee/web-fragment_4_0.xsd"
              version="4.0">

    
    <servlet>
        <servlet-name>ExampleServlet</servlet-name>
        <servlet-class>com.otp.servlets.ExampleServlet</servlet-class>
    </servlet>

    
    <filter>
        <filter-name>ExampleFilter</filter-name>
        <filter-class>com.otp.filters.ExampleFilter</filter-class>
    </filter>

    
    <listener>
        <listener-class>com.otp.listeners.ExampleListener</listener-class>
    </listener>

    
    <context-param>
        <param-name>example-param</param-name>
        <param-value>example-value</param-value>
    </context-param>

   
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>

</web-fragment>
